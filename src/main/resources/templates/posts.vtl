  <!DOCTYPE html>
<html>
  <head>
    <title>Acebook!</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <style>
        div.likes {
        position: relative;
        bottom: 50;
        left: 410px;
        width: 200px;
        height: 10px;
       }
    </style>
  </head>
  <body>


    <h1>Welcome to acebook, $name </h1>

    <form action="/session/destroy" method="POST">
      <input type="submit" value="Sign out">
      <br>
    </form>


    <form action='/posts/new' method="POST">
      <div class="form-group">
        <textarea id="post" type="text" name="post" style="width:400px; height:100px; border-style:double"></textarea>
      </div>
      <button type="Submit" name="Submit" value="Submit" class="btn btn-primary">Submit</button>
    </form>
    <br><br>
    <ul style="list-style-type:none;">
      <div class="each-post">
        #foreach($p in $posts)
        <li><textarea name="post-body" style="width:400px; height:100px; border-style:double">
          $p.content</textarea>
          <div class="likes">
            <form action='/likes' method="POST"><input name=$p.getPostID() style="display:inline" type="submit" value="Like" class="btn btn-success"></form>
            <p style="display:inline">$p.getPostID()</p>
          </div>
          Posted by $p.name $p.getTimeStamp()<br><br>
        </li>
      </div>
      #end
    </ul>

  </body>

</html>